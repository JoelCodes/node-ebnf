{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "types": []
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}